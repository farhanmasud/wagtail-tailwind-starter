# Environment: local, testing, staging, or production
WORK_ENV=local

# Django secret key - generate a new one for production
# Use: python -c "import secrets; print(secrets.token_urlsafe(50))"
SECRET_KEY='your-secret-key-goes-here-change-in-production'

# Allowed hosts - comma separated values
ALLOWED_HOSTS=localhost,127.0.0.1
# ALLOWED_HOSTS=mysite.com,www.mysite.com

# CSRF trusted origins - required for Django 4.0+
# CSRF_TRUSTED_ORIGINS=https://mysite.com,https://www.mysite.com

# Database settings
DB_NAME=your_db_name
DB_USER=your_db_user_name
DB_PASSWORD=your_db_password
DB_HOST=localhost
DB_PORT=5432

# PostgreSQL admin password (for setup script)
PGPASSWORD=your_postgres_user_password_here

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Wagtail settings
WAGTAIL_SITE_NAME=My Example Site
WAGTAILADMIN_BASE_URL=http://localhost:8000
WAGTAIL_DEFERRED_VALIDATION=true

# Sentry configuration (optional)
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=1.0

# Security settings (production/staging only)
# SECURE_SSL_REDIRECT=true
# SECURE_HSTS_SECONDS=3600

# Test settings
# TEST_USE_SQLITE=false
